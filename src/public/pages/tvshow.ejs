                  <% if (i < content.spoken_languages.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>
          </table>
        </section>
      </div>
      <div class="comment-section">
        <div id="disqus_thread"></div>
      </div>
