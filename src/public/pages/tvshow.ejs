      <div class="user">
        <span id="username">@deleted-user</span>
        <div class="pfp">
          <img src="https://picsum.photos/200" alt="Default Profile Picture" />
        </div>
      </div>
    </nav>
    <main>
      <div class="videosrc">
        <iframe
          src="https://blackvid.space/embed?tmdb=<%= init.id.tmdb %>&season=<%= init.s %>&episode=<%= init.ep %>"
          sandbox="allow-scripts allow-same-origin"
          allowfullscreen="true"
          frameborder="0"
          scrolling="no"
          id="vidsrc"
        ></iframe>
      </div>
      <div class="series-select">
        <div class="input-group">
          <select name="season" id="season-select">
            <% for (let i = 1; i <= content.number_of_seasons; i++) { %>
              <option value="<%= i %>" <% if (init.s == i) { %>selected<% } %>>Season <%= i %></option>
            <% } %>
          </select>          
          <input type="text" placeholder="Search episode" /><button>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-arrow-right-circle-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
              />
            </svg>
          </button>
        </div>
        <section>
          <% for (let i = 0; i < episodes.episodes.length; i++) { %>
            <a href="/watch/<%= content.name.toLowerCase().replace(/ /g, "-")%>-<%= init.id.imdb %>?s=<%= init.s %>&ep=<%= i + 1 %>">
              <span>EP <%= i + 1 %> </span>
              <%= episodes.episodes[i].name.length >= 20 ? episodes.episodes[i].name.slice(0, 20) + "..." : episodes.episodes[i].name %>
            </a>
          <% }; %>
        </section>
      </div>
      <div class="content-info">
        <div>
          <span class="title"><%= content.name %></span>
          <section class="rating">
            <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg> <%= new String(content.vote_average).slice(0,3) %></span><span>HD</span
            ><span><%= content.episode_run_time?.[0] %> min</span>
          </section>
          <p><%= content.overview %></p>
          <table>
            <tr>
              <td>Type: </td>
              <td>TV</td>
            </tr>
            <tr>
              <td>Country:</td>
              <td>
                <% for (let i = 0; i < content.production_countries.length; i++) { %>
                  <%= content.production_countries[i].name %>
                  <% if (i < content.production_countries.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>            
            <tr>
              <td>Genres: </td>
              <td>
                <% for (let i = 0; i < content.genres.length; i++) { %>
                  <%= content.genres[i].name %>
                  <% if (i < content.genres.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>
            <tr>
              <td>Production: </td>
              <td>
                <% for (let i = 0; i < content.production_companies.length; i++) { %>
                  <%= content.production_companies[i].name %> 
                  <% if (i < content.production_companies.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>
            <tr>
              <td>Created by: </td>
              <td>
                <% for (let i = 0; i < content.created_by.length; i++) { %>
                  <%= content.created_by[i].name %>
                  <% if (i < content.created_by.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>
            <tr>
              <td>Release date: </td>
              <td><%= new Date(content.first_air_date).toLocaleDateString('en-US',{ month: 'short', day: '2-digit', year: 'numeric' }) %></td>
            </tr>
            <tr>
              <td>Languages: </td>
              <td>
                <% for (let i = 0; i < content.spoken_languages.length; i++) { %>
                  <%= content.spoken_languages[i].name %>
                  <% if (i < content.spoken_languages.length - 1) { %>
                    <%= ', ' %>
                  <% } %>
                <% } %>
              </td>
            </tr>
          </table>      
        </div>
        <img
          src="https://image.tmdb.org/t/p/original<%= content.poster_path %>"
          alt=""
        />
      </div>
      <div class="content-info-mobile">
